<ResultSelectionScreen>:
    on_enter: root.load_buttons()  # Load buttons when the screen is entered

    MDScreen:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            type: "small"
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_results_screen()

            MDTopAppBarTitle:
                text: "Lista wynik√≥w"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "account-circle-outline"

        ScrollView:
            pos_hint: {"top": 0.85}
            size_hint_y: 0.8

            MDBoxLayout:
                id: button_container
                orientation: 'vertical'
                pos_hint: {"top": 0.65}
                adaptive_height: True
                padding: 20
                spacing: 60
