<LoginScreen>:

    MDScreen:
        md_bg_color: 1, 1, 1, 1

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 60

        MDLabel:
            text: "Witaj w aplikacji Lab Results"
            size_hint_y: 0.2
            halign: 'center'

        MDTextField:
            mode: "filled"
            size_hint_x: None
            width: "200dp"
            pos_hint: {"center_x": .5, "center_y": .5}
            #theme_bg_color: "Custom"
            #fill_color_normal: 0, 0, 1, .2
            #fill_color_focus: 0, 0, 1, .3

            MDTextFieldHintText:
                text: "Pseudonim"

            MDTextFieldLeadingIcon:
                icon: "account"

        MDTextField:
            mode: "filled"
            size_hint_x: None
            width: "200dp"
            pos_hint: {"center_x": .5, "center_y": .5}
            #theme_bg_color: "Custom"
            #fill_color_normal: 0, 0, 1, .2
            #fill_color_focus: 0, 0, 1, .3
            password: True

            MDTextFieldHintText:
                text: "Hasło"

            MDTextFieldLeadingIcon:
                icon: "lock"

        MDButton:
            style: "outlined"
            theme_width: "Custom"
            pos_hint: {'center_x': 0.5}
            size_hint_x: 0.4
            on_release: root.switch_to_new_result_screen()

            MDButtonText:
                text: "Zaloguj"
                pos_hint: {"center_x": .5, "center_y": .5}


        MDLabel:
            text: "Nie masz konta? Zarejestruj się tutaj."
            size_hint_y: 0.2
            halign: 'center'
