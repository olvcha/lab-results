<DataReferenceScreen>:
    MDScreen:
        md_bg_color: 1, 1, 1, 1  # White background color

        MDTopAppBar:
            type: "small"
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_results_screen()

            MDTopAppBarTitle:
                text: "Szczegóły"
                pos_hint: {"center_x": .5}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50  # Fixed height for the button row
            padding: [10, 10, 10, 10]
            spacing: 10
            pos_hint: {"top": 0.85}  # Position below the app bar

            MDButton:
                id: details_button
                style: "filled"
                theme_width: "Custom"
                md_bg_color: [0.4, 0, 0.6, 1]
                pos_hint: {'center_x': 0.5}
                size_hint_x: 0.4
                on_release: root.switch_to_result_screen()

                MDButtonText:
                    text: "Wyniki"
                    pos_hint: {"center_x": .5, "center_y": .5}

            MDButton:
                id: parameter_in_time_button
                style: "filled"
                theme_width: "Custom"
                md_bg_color: [0.7, 0.6, 0.8, 1]
                pos_hint: {'center_x': 0.5}
                size_hint_x: 0.4
                on_release: root.switch_to_parameter_in_time_screen()

                MDButtonText:
                    text: "Parametry w czasie"
                    pos_hint: {"center_x": .5, "center_y": .5}

        ScrollView:
            bar_width: 10
            do_scroll_x: False
            pos_hint: {"top": 0.75}
            size_hint_y: 0.8

            MDBoxLayout:
                orientation: 'vertical'
                pos_hint: {"top": 0.80}
                size_hint_y: None
                height: 1500
                padding: [10]
                spacing: 10
                id: image_container
