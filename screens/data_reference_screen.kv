<DataReferenceScreen>:
    MDScreen:
        md_bg_color: 1, 1, 1, 1  # White background color

        MDTopAppBar:
            type: "small"
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_main_screen()

            MDTopAppBarTitle:
                text: "Wyniki"
                pos_hint: {"center_x": .5}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50  # Fixed height for the button row
            padding: [10, 10, 10, 10]
            spacing: 10
            pos_hint: {"top": 0.85}  # Position below the app bar

            MDButton:
                id: details_button
                style: "filled"
                theme_width: "Custom"
                md_bg_color: [0.4, 0, 0.6, 1]
                pos_hint: {'center_x': 0.5}
                size_hint_x: 0.4
                on_release: root.switch_to_result_screen()

                MDButtonText:
                    text: "Szczegóły"
                    pos_hint: {"center_x": .5, "center_y": .5}

            MDButton:
                id: parameter_in_time_button
                style: "filled"
                theme_width: "Custom"
                md_bg_color: [0.7, 0.6, 0.8, 1]
                pos_hint: {'center_x': 0.5}
                size_hint_x: 0.4
                on_release: root.parameter_in_time_button_action()

                MDButtonText:
                    text: "Parametry w czasie"
                    pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 400
            padding: [10]
            spacing: 10
            id: image_container  # Container where the image will be displayed




