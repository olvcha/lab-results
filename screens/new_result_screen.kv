<NewResultScreen>:
    MDScreen:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            type: "small"
            size_hint_x: 1
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_main_screen()

            MDTopAppBarTitle:
                text: "Nowy wynik"

        MDButton:
            id: load_button
            theme_width: "Custom"
            style: "filled"
            height: "56dp"
            size_hint_x: 0.5
            disabled: True
            pos_hint: {'center_x':0.4, 'center_y':0.5}
            on_release: root.load_data()

            MDButtonIcon:
                icon: "plus"

            MDButtonText:
                id: load_button_text
                text: "Wybierz plik"

        MDIcon:
            id: file_icon
            icon: "close"
            valign: "center"
            pos_hint: {'center_x':0.8, 'center_y':0.5}

        MDButton:
            id: date_button
            theme_width: "Custom"
            style: "filled"
            height: "56dp"
            size_hint_x: 0.5
            pos_hint: {'center_x': 0.4, 'center_y': 0.7}

            on_release: root.show_date_picker()

            MDButtonIcon:
                icon: "calendar-range"

            MDButtonText:
                id: date_button_text
                text: "Wybierz datÄ™"

        MDIcon:
            id: date_icon
            icon: "close"
            valign: "center"
            pos_hint: {'center_x':0.8, 'center_y':0.7}

        MDButton:
            id: data_button
            theme_width: "Custom"
            style: "outlined"
            height: "56dp"
            size_hint_x: 0.7
            pos_hint: {'center_x':0.5, 'center_y':0.3}
            disabled: True
            on_release: root.switch_to_result_screen()

            MDButtonText:
                text: "Analizuj wyniki"