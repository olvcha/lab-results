<NewResultScreen>:
    MDScreen:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            type: "small"
            size_hint_x: 1
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_main_screen()

            MDTopAppBarTitle:
                text: "Nowy wynik"


        MDButton:
            id: load_button
            style: "elevated"
            height: "56dp"
            size_hint_x: 0.6
            pos_hint: {'center_x':0.5, 'center_y':0.6}
            on_release: root.load_data()

            MDButtonIcon:
                icon: "plus"

            MDButtonText:
                text: "Load PDF"

        MDLabel:
            id: file_path_label
            text: "No file selected"
            halign: "center"
            pos_hint: {'center_x':0.5, 'center_y':0.5}

        MDButton:
            id: data_button
            style: "elevated"
            height: "56dp"
            size_hint_x: 0.6
            pos_hint: {'center_x':0.5, 'center_y':0.2}
            disabled: True
            on_release: root.switch_to_result_screen()

            MDButtonText:
                text: "View Results"