<ResultScreen>:
    MDScreen:
        md_bg_color: 1, 1, 1, 1  # White background color

        MDTopAppBar:
            type: "small"
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_main_screen()

            MDTopAppBarTitle:
                text: "Wyniki"
                pos_hint: {"center_x": .5}

        ScrollView:
            bar_width: 10
            do_scroll_x: False
            pos_hint: {"top": 0.85}
            size_hint_y: 0.8

            MDBoxLayout:
                id: plot_container
                orientation: 'vertical'
                padding: [10, 10, 10, 10]
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"top": 0.65}
                adaptive_height: True
