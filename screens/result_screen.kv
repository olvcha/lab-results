<ResultScreen>:
    MDScreen:
        md_bg_color: 1, 1, 1, 1  # White background color for the screen

        MDTopAppBar:
            type: "small"
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: root.switch_to_main_screen()

            MDTopAppBarTitle:
                text: "Wyniki"
                pos_hint: {"center_x": .5}

        # This is the container where plots will be added
        MDBoxLayout:
            id: plot_container
            orientation: 'vertical'
            padding: [10, 10, 10, 10]  # Padding around the elements
            size_hint_y: 1  # Let this take the available space


